<Window x:Class="MiniTorrentUserInterface.UserMainFileSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniTorrentUserInterface"
        mc:Ignorable="d"
        Title="UserMainFileSystem" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblName" Content="Enter File Name: " HorizontalAlignment="Left" Margin="46,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="260,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btSearch" Content="Search" HorizontalAlignment="Left" Margin="508,81,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="btSearch_Click">
        </Button>
        <DataGrid x:Name="dtGrid" HorizontalAlignment="Left" Height="89" Margin="46,151,0,0" VerticalAlignment="Top" Width="334" ForceCursor="True" AutoGenerateColumns="False" />
        <Button x:Name="btDownload" Content="Download File" HorizontalAlignment="Left" Margin="305,191,0,0" VerticalAlignment="Top" Width="75"/>


    </Grid>
</Window>
